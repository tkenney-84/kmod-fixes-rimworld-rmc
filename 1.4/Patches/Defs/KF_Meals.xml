<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- The game multiplies all cost values by 20 to get the actual number of items consumed. -->

<!-- Simple Meals -->
<Operation Class="PatchOperationReplace">
  <xpath>/Defs/RecipeDef[defName="CookMealSimple"]/ingredients/li/count/text()</xpath>
  <value>
    0.2
  </value>
</Operation>
<!-- Simple Meals Bulk -->
<Operation Class="PatchOperationReplace">
  <xpath>/Defs/RecipeDef[defName="CookMealSimpleBulk"]/ingredients/li/count/text()</xpath>
  <value>
    0.8
  </value>
</Operation>
